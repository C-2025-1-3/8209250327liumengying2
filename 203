#include<iostream>
using namespace std;
int main() {
	int x, y, z;
	cin >> x >> y >> z;
	int sum;
	if (x + y > z && x - y<z || x + z>y && x - z<y || y + z>x && y - z < x) {
		sum = x + y + z;
		cout << "perimeter:" << sum << endl;
		if (x == y || x == z || y == z) {
			cout << "isosceles triangle!";
		}
	}
	else {
		cout << "input again!" << endl;
	}
	return 0;
}
